@model LibrarySystemMvc.Web.Areas.Admin.Models.BookDeleteModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@using (Html.BeginForm("Delete", "Books", new { id = Model.Id }))
{
    @Html.AntiForgeryToken();
    <hr />
    
    <h3>Are you sure to delete book <i><b>@Model.Title</b></i> from <i><b>@Model.Author</b></i> ?</h3>
    
    <hr />
    <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a href="javascript:history.go(-1)" class="btn btn-info">Cancel</a>
        </div>
    </div>
}

<br />
<br />
<br />
<p>
    <a href="javascript:history.go(-1)">Back to books</a>
</p>

